<Application x:Class="Twitch_Analysis_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Twitch_Analysis_App"         
             xmlns:ViewModels="clr-namespace:Twitch_Analysis_App.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <SolidColorBrush x:Key="WarningBrush"
                         Color="LightCoral"/>

        <SolidColorBrush x:Key="DefaultChatBrush"
                         Color="Yellow"/>

        <SolidColorBrush x:Key="DefaultChatTitleBrush"
                         Color="White"/>
        <ViewModels:TwitchViewModel x:Key="TwitchViewModel"/>
                
    </Application.Resources>
</Application>
